<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apsi.webliga.SearchLeagueActivity"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wyszukaj ligę"
        android:id="@+id/searchLeagueTV"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wpisz nazwę ligi lub jej część:"
        android:id="@+id/enterNameTV"
        android:layout_below="@+id/searchLeagueTV"
        android:layout_alignParentLeft="true"
        android:textSize="22dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leagueNameET"
        android:layout_below="@+id/enterNameTV"
        android:layout_toLeftOf="@+id/searchLeagueSLBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="3dp"
        android:singleLine="true"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/leagueNameET"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyszukaj"
        android:id="@+id/searchLeagueSLBtn"
        android:layout_below="@+id/enterNameTV"
        android:layout_alignParentRight="true"
        android:onClick="searchLeague" />

</RelativeLayout>
